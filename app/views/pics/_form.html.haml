= simple_form_for @pic, html: { multipart: true} do |f|
	- if @pic.errors.any?
		#errors
			%h2
			= pluralize(@pic.errors.count, "errors")
			prevented this Pic from saving
			%ul
				- @pic.errors.full_massages.each do |msg|
					%li= msg

	.form-group
		= f.input :title, input_html: {class: 'form_control'}
	.form-group
		= f.input :description, input_html: {class: 'form_control'}

	= f.button :submit, class: "btn btn-info"